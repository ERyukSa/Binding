<?xml version="1.0" encoding="utf-8"?>
<com.medium.binding.src.main.menu.store_detail.MRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_room_create_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/home_room_create_top_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/home_room_create_cancel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cancel" />

        <TextView
            android:id="@+id/home_room_create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/notosanskrbold"
            android:text="글쓰기"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/home_room_create_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="발행"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/home_room_create_top_bar"
        android:background="#dadada" />

    <EditText
        android:id="@+id/home_room_create_content"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_room_create_top_bar"
        android:background="@null"
        android:gravity="top"
        android:hint="책에 대한 내용을 자유롭게 작성해주세요."/>


</com.medium.binding.src.main.menu.store_detail.MRelativeLayout>